@model ProjetoSegundoSemestre.Models.Medico

@{
    ViewData["Title"] = "Login";
}

<div class="cabecalho-login row d-flex flex-column align-items-center">
    <h5>BEM-VINDOS AO ONMEDICAL, MÉDICO!</h5>
    <h1>Login</h1>
</div>


    
<div class="row d-flex flex-column align-items-center bg-danger form-container">
    <div class="col-md-4">
        <form class="form-login" asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
            <h3> @ViewBag.Message </h3>
            <a asp-controller="Medicos" asp-action="Create"><u>Não tem cadastro? Clique aqui!</u></a>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
