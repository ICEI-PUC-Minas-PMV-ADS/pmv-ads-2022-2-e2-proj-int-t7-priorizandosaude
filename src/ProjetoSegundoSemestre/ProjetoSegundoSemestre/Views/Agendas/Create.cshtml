@model ProjetoSegundoSemestre.Models.Agenda

@{
    ViewData["Title"] = "Create";
}

@*@await Component.InvokeAsync("Menu")*@

<div class="header-primary">
    <a asp-area="" asp-controller="Agendas" asp-action="Index">
        <img src="~/img/onmedical_logo.png" />
    </a>
    <div class="login-home">
        <a class="secondary-button" asp-area="" asp-controller="Consultas" asp-action="Index">MINHAS CONSULTAS</a>
        <a class="secondary-button" asp-area="" asp-controller="Medicos" asp-action="Logout">SAIR</a>
    </div>
</div>

<div class="cabecalho-login mt-5 row d-flex flex-column align-items-center">
    <h6>BEM-VINDOS AO ONMEDICAL - MÉDICO!</h6>
    <h1>CADASTRAR AGENDA</h1>
</div>

<div id="div-cadastro-agenda" class="row mt-5">
    <div class="col-md-4 offset-md-4 d-flex justify-content-center text-center">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DataHoraInicioConsulta" class="control-label"></label>
                <input asp-for="DataHoraInicioConsulta" class="form-control w-100" />
                <span asp-validation-for="DataHoraInicioConsulta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataHoraFimConsultaConsulta" class="control-label"></label>
                <input asp-for="DataHoraFimConsultaConsulta" class="form-control w-100" />
                <span asp-validation-for="DataHoraFimConsultaConsulta" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-end">
                <input type="submit" value="Create" class="btn btn-primary " />
            </div>
        </form>
    </div>
</div>

